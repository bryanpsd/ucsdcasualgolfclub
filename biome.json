{
	"$schema": "https://biomejs.dev/schemas/2.2.5/schema.json",
	"vcs": { "enabled": true, "clientKind": "git", "useIgnoreFile": true },
	"files": {
		"includes": [
			"**",
			"!node_modules",
			"!dist",
			"!.astro",
			"!.netlify",
			"!.cache",
			"!.husky",
			"!.vscode",
			"!.idea",
			"!.pnpm-store"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 100
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"jsxQuoteStyle": "double",
			"semicolons": "always"
		}
	},
	"linter": {
		"enabled": true,
		"rules": { "recommended": true }
	},
	"assist": {
		"enabled": true,
		"actions": { "source": { "organizeImports": "on" } }
	},
	"overrides": [
		{
			"includes": ["**/*.astro"],
			"formatter": { "indentStyle": "tab", "lineWidth": 100 },
			"linter": {
				"rules": {
					"style": { "useConst": "on", "useImportType": "on" },
					"correctness": { "noUnusedImports": "off", "noUnusedVariables": "off" }
				}
			}
		},
		{
			"includes": ["**/*.css.ts"],
			"linter": { "rules": { "recommended": true } }
		},
		{
			"includes": ["**/*.ts", "**/*.tsx"],
			"formatter": { "enabled": true },
			"linter": {
				"rules": {
					"recommended": true,
					"correctness": { "noUnusedImports": "on", "noUnusedVariables": "on" },
					"style": { "useConst": "on", "useImportType": "on" }
				}
			}
		},
		{
			"includes": ["src/types/contentful/**/*.ts"],
			"linter": {
				"rules": {
					"recommended": true,
					"correctness": { "noUnusedImports": "off", "noUnusedVariables": "off" }
				}
			}
		}
	]
}
